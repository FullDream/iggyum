{
	"globals": { "React": true },
	"extends": [
		"eslint:recommended",
		"next/core-web-vitals",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"prettier/prettier": [
			"warn",
			{
				"singleQuote": true,
				"useTabs": true,
				"semi": false,
				"trailingComma": "all",
				"bracketSpacing": true,
				"printWidth": 100,
				"endOfLine": "auto",
				"jsxBracketSameLine": true
			}
		]
	}
}
